 
<%= form_with model: @book do |form| %>
  <div class="row justify-content-center">
      <div class="col-lg-3 ">
        <div class="form-group ">
            <%= form.label :name %><br>
            <%= form.text_field :name, class:"form-control", placeholder: "Enter Your Book Name" %>
        </div>
      </div>
  </div>
  

  <div class="row justify-content-center">
      <div class="col-lg-3 mt-3">
        <div class="form-group ">
            <%= form.label :price %><br>
            <%= form.number_field :price, class:"form-control", placeholder: "Enter Your Price" %>
        </div>
      </div>
  </div>

  <div class="text-center mt-3">
    <%= form.submit "Update Book", class:"btn btn-success" %>
  </div>
<% end %>
