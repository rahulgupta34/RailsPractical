<h1 class="text-center text-danger m-4">List Of Books</h1>

<table class="table table-borderless">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Author Id</th>
      <th scope="col">Show</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <th scope="row"><%= book.id %></th>
      <td><%= book.name %></td>
      <td><%= book.price %></td>
      <td><%= book.author_id %></td>
      <td><%= link_to "Show", book_path(book.id), class:"btn btn-success" %></td>
      <td><%= link_to "Edit", edit_book_path(book.id), class:"btn btn-info" %></td>
      <td><%= link_to "Delete", book_path(book.id), data: {turbo_method: :delete, turbo_confirm: "Are You Sure Want To Delete"}, class:"btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

